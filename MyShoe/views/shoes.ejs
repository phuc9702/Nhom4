            <div class="row">
                <div class="col">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="Home.jsp">Home</a></li>
<!--                            <li class="breadcrumb-item"><a href="#">Category</a></li>
                            <li class="breadcrumb-item active" aria-current="#">Sub-category</li>-->
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-sm-3">
                    <div class="card bg-light mb-3">
                        <div class="card-header bg-primary text-white text-uppercase"><i class="fa fa-list"></i> Categories</div>
                        
                        <ul class="list-group category_block">
                            
                            <li class="list-group-item text-white"><a href="#">Nike</a></li>
                            <li class="list-group-item text-white"><a href="#">Adidas</a></li>
                            <li class="list-group-item text-white"><a href="#">Asics</a></li>
                            <li class="list-group-item text-white"><a href="#">Puma</a></li>
                        </ul>
                    </div>
                  
                </div>

                <div class="col-sm-9">
                    <div class="row">
                        <% Shoes.forEach((Shoe)=>{ %>
                            <div class="col-12 col-md-6 col-lg-4">
                                <div class="card ab">
                                    <img class="card-img-top" height="200px" width="253px" src="<%- Shoe.img %>" alt="Card image cap">
                                    <div class="card-body">
                                        <h4 class="card-title"><a  title="View Product" class="truncated-link"  ><%- Shoe.tenGiay %></a></h4>
                                        <p class="card-text show_txt"><%- Shoe.hangSX %></p>
                                        <div class="row">
                                            <div class="col">
                                                <p class="btn btn-danger btn-block"><%- Shoe.gia %></p>
                                            </div>
                                            <div class="col">
                                                <a href="#" class="btn btn-success btn-block">Add to cart</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% }); %>
                    </div>
                </div>

            </div>
